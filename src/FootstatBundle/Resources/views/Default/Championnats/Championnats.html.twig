{% extends "::layout/layout.html.twig" %}  
{% block body %}
    <div class="col-sm-2">

            {% include '::modulesUsed/navigation.html.twig' %}
  
    </div>



    <div class="col-sm-10">

        {% if championnats|length != 0 %}

            {% for championnat in championnats %}
                <div class="col-sm-2">
                    <div class="well" style="height: 200px;">
                        <div class="img-thumbnail">
                        <img src="{{ championnat.Media.url }}" alt="{{ championnat.Media.alt }}"  width="75" height="75" />
                        </div>
                        <div class="caption">
                            <a href="{{ path('ChampionnatEquipes', {'championnat': championnat.id}) }}"><h6>{{ championnat.nom }}</h6></a>
                            <p><a href="#" class="btn btn-default sty-table" role="button">+ d'infos</a></p>
                        </div>
                    </div>
                </div>
            {% endfor %}

        {% else %}
            Aucune championnat
        {% endif %}
    </div>

{% endblock %}