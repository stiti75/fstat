
<div class="col-md-5" id="home">
    <div class="box box-primary">
        <h4>Matches domicile</h4></br>
        <table class="table table-condensed sty-table">
            <thead class="thead-inverse">
                <tr>
                    <th>Date</th>
                    <th>Domicile</th>
                    <th>Score</th>
                    <th>Extérieur</th>
                </tr>
            </thead>
            <tbody>                              
                {% for matchedom in matchesdom|reverse %}
                    <tr class="{% if matchedom.score1 > matchedom.score2 %}bg-success{% elseif matchedom.score1 < matchedom.score2 %}bg-danger{% else %}bg-info{% endif %}">
                        <td>{{ matchedom.date|date('d-m-Y') }}</td>
                        <td><a href="{{ path('admin_footstat_equipes_show', {'id': matchedom.equipeDom.id}) }}">{{ matchedom.equipeDom.nom }}</a></td>
                        <td>{{ matchedom.score1 }} : {{ matchedom.score2}}</td>
                        <td><a href="{{ path('admin_footstat_equipes_show', {'id': matchedom.equipeExt.id}) }}">{{ matchedom.equipeExt.nom }}</a></td>
                        {% endfor %}  
                </tr>

            </tbody>
        </table>
    </div>

</div> 
