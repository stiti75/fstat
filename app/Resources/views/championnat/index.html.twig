{% extends "::layout/layoutAdmin.html.twig" %}  

{% block body %}



    <div class="container">
        <div class="row">


            <div class="col-md-10 col-md-offset-1">

                <div class="panel panel-default panel-table">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col col-xs-6">
                                <h3 class="panel-title">Liste des championnats</h3>
                            </div>
                            <div class="col col-xs-6 text-right">
                                <a href="{{ path('championnat_new') }}" class="btn btn-sm btn-primary btn-create">Ajouter Championnat</a>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <table class="table table-striped table-bordered table-list">
                            <thead>

                                <tr>
                                    <th><em class="fa fa-cog"></em></th>
                                    <th class="hidden-xs">ID</th>
                                    <th>Nom</th>
                                    <th>Url</th>
                                </tr> 
                            </thead>
                            <tbody>
                                {% for championnat in championnats %}
                                    <tr>
                                        <td align="center">
                                            <a href="{{ path('championnat_edit', { 'id': championnat.id }) }}" class="btn btn-default"><span class="glyphicon glyphicon-pencil"></span></a>
                                            <a href="{{ path('championnat_delete', { 'id': championnat.id }) }}" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span></a>
                                        </td>

                                        <td class="hidden-xs"><a href="{{ path('championnat_show', { 'id': championnat.id }) }}">{{ championnat.id }}</a></td>
                                        <td><a href="{{ path('championnat_show', { 'id': championnat.id }) }}">{{ championnat.nom }}</a></td>
                                        <td><a href="{{ path('championnat_show', { 'id': championnat.id }) }}">{{ championnat.url }}</a></td>

                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>

                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="col col-xs-4">Page 1 of 5
                            </div>
                            <div class="col col-xs-8">
                                <ul class="pagination hidden-xs pull-right">
                                    <li><a href="#">1</a></li>
                                    <li><a href="#">2</a></li>
                                    <li><a href="#">3</a></li>
                                    <li><a href="#">4</a></li>
                                    <li><a href="#">5</a></li>
                                </ul>
                                <ul class="pagination visible-xs pull-right">
                                    <li><a href="#">«</a></li>
                                    <li><a href="#">»</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

            </div></div></div>    
        {% endblock %}
